<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Standart_Instance_Account_Check</fullName>
    <active>true</active>
    <description>Check if Standard Instance has an Account</description>
    <errorConditionFormula>AND(ISPICKVAL( Type__c , &apos;Standard&apos;),
    ISBLANK(Account__c ) )</errorConditionFormula>
    <errorMessage>Standard Instance must have a parent Account</errorMessage>
</ValidationRule>
